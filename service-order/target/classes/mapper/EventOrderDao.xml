<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.erato.serviceorder1.dao.EventOrderDao">

    <resultMap type="com.erato.serviceorder1.entity.EventOrder" id="EventOrderMap">
        <result property="id" column="id" jdbcType="INTEGER"/>
        <result property="payload" column="payload" jdbcType="VARCHAR"/>
        <result property="status" column="status" jdbcType="INTEGER"/>
    </resultMap>

    <!--查询单个-->
    <select id="queryById" resultMap="EventOrderMap">
        select id,
               payload,
               status
        from tbl_event_order
        where id = #{id}
    </select>

    <!--查询指定行数据-->
    <select id="queryAllByLimit" resultMap="EventOrderMap">
        select
        id, payload, status
        from tbl_event_order
        <where>
            <if test="id != null">
                and id = #{id}
            </if>
            <if test="payload != null and payload != ''">
                and payload = #{payload}
            </if>
            <if test="status != null">
                and status = #{status}
            </if>
        </where>
        limit #{pageable.offset}, #{pageable.pageSize}
    </select>

    <!--统计总行数-->
    <select id="count" resultType="java.lang.Long">
        select count(1)
        from tbl_event_order
        <where>
            <if test="id != null">
                and id = #{id}
            </if>
            <if test="payload != null and payload != ''">
                and payload = #{payload}
            </if>
            <if test="status != null">
                and status = #{status}
            </if>
        </where>
    </select>
    <select id="queryOnCondition" resultMap="EventOrderMap">
        select * from tbl_event_order
        <where>
            <if test="id != null">
                and id = #{id}
            </if>
            <if test="payload != null and payload != ''">
                and payload = #{payload}
            </if>
            <if test="status != null">
                and status = #{status}
            </if>
        </where>
    </select>

    <!--新增所有列-->
    <insert id="insert" keyProperty="id" useGeneratedKeys="true">
        insert into tbl_event_order(payload, status)
        values (#{payload}, #{status})
    </insert>

    <insert id="insertBatch" keyProperty="id" useGeneratedKeys="true">
        insert into tbl_event_order(payload, status)
        values
        <foreach collection="entities" item="entity" separator=",">
            (#{entity.payload}, #{entity.status})
        </foreach>
    </insert>

    <insert id="insertOrUpdateBatch" keyProperty="id" useGeneratedKeys="true">
        insert into tbl_event_order(payload, status)
        values
        <foreach collection="entities" item="entity" separator=",">
            (#{entity.payload}, #{entity.status})
        </foreach>
        on duplicate key update
        payload = values(payload),
        status = values(status)
    </insert>

    <insert id="insertWithPk">
        insert into tbl_event_order(id, payload, status)
        values (#{id}, #{payload}, #{status})
    </insert>

    <!--通过主键修改数据-->
    <update id="update">
        update tbl_event_order
        <set>
            <if test="payload != null and payload != ''">
                payload = #{payload},
            </if>
            <if test="status != null">
                status = #{status},
            </if>
        </set>
        where id = #{id}
    </update>

    <!--通过主键删除-->
    <delete id="deleteById">
        delete
        from tbl_event_order
        where id = #{id}
    </delete>

</mapper>

